<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nangyalkhan.database.Lists">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Lname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Lrollno"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Lname"
        android:layout_toEndOf="@+id/Lname"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:paddingTop="10px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Ldesc"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Lrollno"
        android:layout_toEndOf="@+id/Lrollno"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:paddingTop="10px" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvnames"
        android:layout_below="@+id/Lname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
